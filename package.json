{
  "scripts": {
    "build": "browserify src/index.ts -p [ tsify --noImplicitAny ] > build/index.js && open index.html",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "<rootDir>/testPreprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ]
  },
  "dependencies": {
    "tsify": "^3.0.3",
    "typescript": "^2.5.3"
  },
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "jest": "^21.2.1",
    "prettier": "^1.8.2",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0"
  }
}
